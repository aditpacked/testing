local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local allowedUsers = {
    ["9wenerd"] = true,
    ["6atotkaca9"] = true,
    ["AsepSlebewNie"] = true,
    ["ShedowBlack7"] = true,
}

if not allowedUsers[LocalPlayer.Name] then
    LocalPlayer:Kick(" Order? TIKTOK : @kriminala")
    return
end

-- Load script utama
loadstring(game:HttpGet("https://raw.githubusercontent.com/aditpacked/testing/refs/heads/main/main.lua"))()

-- Pantau summit
local leaderstats = LocalPlayer:WaitForChild("leaderstats", 10)
if leaderstats then
    local summitStat = leaderstats:WaitForChild("Summit", 10)
    if summitStat then
        local lastSummit = summitStat.Value
        summitStat:GetPropertyChangedSignal("Value"):Connect(function()
            if summitStat.Value > lastSummit then
                task.delay(3, function() -- ‚è≥ Delay 3 detik
                    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
                        LocalPlayer.Character:BreakJoints()
                    end
                end)
            end
            lastSummit = summitStat.Value
        end)
    end
end